<style>
    /* Keyframes for the seagull flying animation */
        @keyframes fly_kf {
            50% {
                translate: -400% 20%;
        }
            60% {
                translate: -520% 50%;
        }
        75% {
                translate: -530% 30%;
        }
        80% {
                translate: -550% 30%;
        }
            100% {
    translate: -1000% 0;
  }  
        }
    
        /* Keyframes for floating animation */
        @keyframes float {
            0% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-15px); /* Move up by 15px */
            }
            100% {
                transform: translateY(0);
            }
        }
        
        /* Seagull flying animation class */
        .animate-fly {
            animation: fly_kf 6s ease-in-out infinite;
            animation-iteration-count: infinite;
            animation-timing-function: linear;
             animation-fill-mode: both;
            position: absolute;
            left: 100%;
            top: 20px; /* Adjust this for preferred vertical position */
         
        }
    
        /* Floating animation class */
        .animate-float {
            animation: float 4s ease-in-out infinite;
        }
    </style>
        
