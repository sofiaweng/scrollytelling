            <!-- Plastic Images (Under the Wave) -->
            <div class="absolute inset-0 flex justify-center gap-10 -mt-10 z-[-1]">
                <img src="/src/assets/images/blue_plastic_bottle.png" alt="Blue Plastic Bottle" class="w-40 h-40 lg:w-48 lg:h-48 -mt-10 animate-float" style="animation-delay: 0s;" />
                <img src="/src/assets/images/green_plastic_bag.png" alt="Green Plastic Bag" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 0.6s;" />
                <img src="/src/assets/images/silver_can.png" alt="Silver Can" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 1.4s;" />
                <img src="/src/assets/images/orange_cup.png" alt="Orange Cup" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 2.3s;" />
            </div>
        </div>

        <!-- Middle Wave Layer with Floating Plastic Images (Visual Middle Layer) -->
        <div class="absolute inset-x-0 top-20 z-20 -mt-20"> <!-- Middle z-index -->
            <!-- Wave Image -->
            <img src="/src/assets/images/ocean_wave_flip.png" alt="Ocean Wave" class="w-full object-cover" />
            <!-- Plastic Images (Under the Wave) -->
            <div class="absolute inset-0 flex justify-center gap-10 -mt-10 z-[-1]">
                <img src="/src/assets/images/silver_can.png" alt="Silver Can" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 0.3s;" />
                <img src="/src/assets/images/green_plastic.png" alt="Green Plastic" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 0.9s;" />
                <img src="/src/assets/images/red_plastic_bag.png" alt="Red Plastic Bag" class="w-40 h-40 lg:w-48 lg:h-48 -mt-6 animate-float" style="animation-delay: 1.7s;" />
            </div>
        </div>

        <!-- Top Wave Layer with Floating Plastic Images (Visual Bottom Layer) -->
        <div class="absolute inset-x-0 top-40 z-30 -mt-20"> <!-- Highest z-index to appear visually at the bottom -->
            <!-- Wave Image -->
            <img src="/src/assets/images/ocean_wave.png" alt="Ocean Wave" class="w-full object-cover" />
            <!-- Plastic Images (Under the Wave) -->
            <div class="absolute inset-0 flex justify-center gap-10 -mt-10 z-[-1]">
                <img src="/src/assets/images/orange_cup.png" alt="Orange Cup" class="w-40 h-40 lg:w-48 lg:h-48 -mt-10 animate-float" style="animation-delay: 0.1s;" />
                <img src="/src/assets/images/green_plastic_bag.png" alt="Green Plastic Bag" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 1.1s;" />
                <img src="/src/assets/images/red_plastic_bag.png" alt="Red Plastic Bag" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 1.9s;" />
                <img src="/src/assets/images/blue_plastic_bottle.png" alt="Blue Plastic Bottle" class="w-40 h-40 lg:w-48 lg:h-48 animate-float" style="animation-delay: 2.6s;" />
            </div>
        </div>
        
    </div>
</section>
