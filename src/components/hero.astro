<style>
/* Keyframes for the seagull flying animation */
    @keyframes fly {
        0% {
            transform: translateX(-10%); /* Start off-screen from the right */
        }
        45% {
            transform: translateX(-100%); /* Move to the left side of the viewport */
        }
        50% {
            transform: translateX(-100%) translateY(-5px); /* Hover effect on the left */
        }
        55% {
            transform: translateX(-100%); /* Return to position on the left */
        }
        100% {
            transform: translateX(-10%); /* Fly back to the right */
        }
    }

    /* Keyframes for floating animation */
    @keyframes float {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px); /* Move up by 15px */
        }
        100% {
            transform: translateY(0);
        }
    }
    
    /* Seagull flying animation class */
    .animate-fly {
        animation: fly 6s ease-in-out infinite;
        position: absolute;
        top: -10px; /* Adjust this for preferred vertical position */
        right: 0; /* Start from the right */
    }

    /* Floating animation class */
    .animate-float {
        animation: float 4s ease-in-out infinite;
    }
</style>
    
<section class="relative overflow-hidden bg-[#F8F8F8] text-center py-16">
    <!-- Title -->
    <div class="z-10 relative">
        <!-- Seagull Image -->
        <img src="/src/assets/images/seagull.png" alt="Seagull" class="-mt-24 w-28 h-28 lg:w-48 lg:h-48 animate-fly" /> <!-- Increased size -->
        <h1 class="mt-20 mobile-display-font lg:desk-display-font text-[#FF2A00]">PLASTIC</h1>
        <h1 class="mobile-display-font lg:desk-display-font text-[#FF2A00]">CHANGE</h1>
    </div>

    <!-- Layered Wave and Plastic Images with Absolute Positioning -->
