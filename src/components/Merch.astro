---
import { Image } from "astro:assets";
import Link from "../components/Link.astro";
import seaweed from "../assets/images/seaweed.webp";
import seaweed2 from "../assets/images/seaweed_flipped.webp";
import fishbag from "../assets/images/fish_bag.webp";
import tshirt from "../assets/images/merch_shirt.webp";
import bottle from "../assets/images/sheer_bottle.webp";
import bag from "../assets/images/blue_plastic_bag_2.webp";
import bagtwo from "../assets/images/plastic_sheer.webp";
import bagthree from "../assets/images/plasticbag_blue.webp";
import ButtonRed from "../components/ButtonRed.astro";
---

<!-- <div
  class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10 max-w-4xl text-left"
>
</div> -->

<section class="relative py-16 overflow-visible ">
  <div class="md:grid grid-cols-2 mx-5 md:max-w-4xl md:mx-auto  ">
    <div class="md:order-2">
      <h1 
        data-aos="fade-left"
        data-aos-delay="400"
      class="text-4xl lg:text-6xl text-[#FF2A00] text-center md:text-left">Merchandise</h1>
      <h2 
       data-aos="fade-left"
        data-aos-delay="400"
      class="text-xl lg:text-4xl  text-white text-center md:text-left">
        Vi donerer 5% af omsætningen til havet
      </h2>
      <div
      data-aos="fade-left"
      data-aos-delay="400"
      data-aos-duration="3000">
      <div
        class="relative  md:mt-4 floating6"
      >
        <Image
          src={fishbag}
          alt="Fish swimming with a plastic bag"
          class=" h-auto"
        />
        <div
          class="absolute top-1/2 right-1/2 md:right-1/3 bg-black/80 p-4 lg:p-6 max-w-md"
        >
          <p class="text-white text-base lg:text-base mb-2">
            Køb miljøvenlige produkter, der støtter Plastic Change. Fra
            genanvendelige vandflasker til tasker lavet af genbrugsmaterialer –
            alt sammen til fordel for en plastikfri fremtid.
          </p>
          <a class="" href="https://www.hjemhavn.dk/collections/plastic-change-merchandise">
          <ButtonRed>Køb nu</Button></a>
        </div>
      </div>
    </div>
    </div>

    <div class="grid justify-center relative md:order-1">
      <div
       data-aos="fade-in"
        data-aos-delay="400"
       class="z-40 hover:scale-110">
        <a
          href="https://www.hjemhavn.dk/collections/plastic-change-merchandise"
          class="hover:scale-150"
        >
          <Image
            src={tshirt}
            alt="T-shirt with logo"
            class="h-auto z-30 hover:scale-150 floating1"
          />
        </a>
      </div>
      <div
        data-aos="fade-down-right"
        data-aos-delay="400"
        data-aos-duration="3000"
        class="absolute left-3/4 top-1/4"
      >
        <Image src={bottle} alt="Plastic bottle" class="max-w-40 floating2" />
      </div>
      <div
        data-aos="fade-right"
        data-aos-delay="400"
        data-aos-duration="3000"
        class="absolute inset-x-0 top-2/4 -z-10 md:z-0"
      >
        <Image
          src={bag}
          alt="Plastic bag in the ocean"
          class="max-w-60 floating3 sm:-z-10"
        />
      </div>
      <div
        data-aos="fade-left"
        data-aos-delay="400"
        data-aos-duration="3000"
        class="absolute top-2/4 left-2/4"
      >
        <Image
          src={bagtwo}
          alt="Plastic bag swimming"
          class="max-w-40 floating4"
        />
      </div>
      <div
        data-aos="fade-right"
        data-aos-delay="400"
        data-aos-duration="3000"
        class="absolute inset-0 left-1/4"
      >
        <Image
          src={bagthree}
          alt="Plastic bag floating"
          class="max-w-40 floating5"
        />
      </div>
    </div>
    <Image
      src={seaweed}
      alt="Seaweed Left"
      class="absolute z-0 top-[-10%] left-[-20%] transform -translate-y-1/2 w-1/2 lg:w-5/12 max-w-none seaweed-left"
    />
    <Image
      src={seaweed2}
      alt="Seaweed Right"
      class="absolute top-[-10%] right-[-20%] transform -translate-y-1/2 w-1/2 lg:w-5/12 max-w-none seaweed-right"
    />
  </div>

  <style>
    /* Keyframes for enhanced underwater sway */
    @keyframes livelySway {
      0% {
        transform: translateX(0) translateY(0) rotate(0deg);
      }
      25% {
        transform: translateX(10px) translateY(-5px) rotate(2deg);
      }
      50% {
        transform: translateX(-10px) translateY(5px) rotate(-2deg);
      }
      75% {
        transform: translateX(10px) translateY(-5px) rotate(2deg);
      }
      100% {
        transform: translateX(0) translateY(0) rotate(0deg);
      }
    }

    .seaweed-left {
      animation: livelySway 8s ease-in-out infinite;
    }

    .seaweed-right {
      animation: livelySway 9s ease-in-out infinite reverse;
    }

    .floating1 {
      animation: livelySway 7s ease-in-out infinite;
    }

    .floating2 {
      animation: livelySway 10s ease-in-out infinite;
    }

    .floating3 {
      animation: livelySway 11s ease-in-out infinite;
    }

    .floating4 {
      animation: livelySway 12s ease-in-out infinite;
    }

    .floating5 {
      animation: livelySway 13s ease-in-out infinite;
    }

    .floating6 {
      animation: livelySway 10.5s ease-in-out infinite;
    }
  </style>
</section>
