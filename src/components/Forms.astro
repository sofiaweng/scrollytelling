---
import { Image } from 'astro:assets';
import logoRed from "../assets/images/logoRed.svg";
import logoDarkGreen from "../assets/images/logoDarkGreen.svg";
import logoGreen from "../assets/images/logoGreen.svg";
import ButtonRed from "../components/ButtonRed.astro";
---

<div class="h-[18%]   ">

</div>
<form  action="#" method="post" class=" p-6 self-center  text-customBlack ">

        <div class="mt-8 flex items-center justify-between">
                 <h1 class="text-2xl lg:text-3xl font-semibold uppercase  text-customBlack">Støt <br> #single-<br>usesucks </h1>
                 <Image src={logoDarkGreen} alt="logo" class="w-1/3"></Image>
       
        </div>
  
    <label for="support" class="text-lg lg:text-xl font-black uppercase">Hvordan vil du støtte?</label>
    <br>
    <input type="radio" class="py-1 my-2 focus:bg-customDarkGreen focus:ring-customDarkGreen checked:bg-customDarkGreen checked:ring-customDarkGreen" id="month" name="support">
    <label for="Støt månedlig">Støt månedlig</label>
    <input type="radio" class="py-1 ml-5 my-2  focus:bg-customDarkGreen focus:ring-customDarkGreen checked:bg-customDarkGreen checked:ring-customDarkGreen" id="ones" name="support">	
    <label for="Støt én gang">Støt én gang</label>
    <br>
    <div class="pt-2 ">
    <label for="support" class="text-lg lg:text-xl font-black uppercase ">Vælg beløb</label>
</div>
    <div class="amount flex justify-between " >
        <input type="radio" name="amount" id="a" />
        <input type="radio" name="amount" id="b" />
        <input type="radio" name="amount" id="c" />
        <label class="w-[90px] h-[90px]  border border-customDarkGreen rounded-full cursor-pointer flex items-center justify-center bg-customWhite text-center " for="a">150</label>
        <label class="w-[90px] h-[90px]  border border-customDarkGreen rounded-full cursor-pointer flex items-center justify-center bg-customWhite text-center" for="b">75</label>
        <label class="w-[90px] h-[90px]  border border-customDarkGreen rounded-full cursor-pointer flex items-center justify-center bg-customWhite text-center" for="c">50</label>
    </div>
    <input type="text" placeholder="Vælg andet beløb" class="my-2 w-full rounded-full border bg-customWhite border-customDarkGreen p-2 focus:outline-none focus:ring-2 focus:bg-customLightGreen focus:border-customDarkGreen focus:ring-customDarkGreen" />
  
    <div class="relative">
        <div class="absolute right-0">
    <ButtonRed >Støt</ButtonRed></input>
</div>
</div>
</form>


<style>
   

    .amount input {
      display: none;
    }
    input[type="radio"]:checked {
    background-color: #346332; 
    border-color: #346332;
  }
    #a:checked ~ [for=a], .circle:hover {
      background-color: #346332;;
      color: #F8F8F8;
      transition: ease-in-out;
      animation-duration: 600ms;
    }
    
    #b:checked ~ [for=b] {
      background-color: #346332;
      color: #F8F8F8;
    }
    
    #c:checked ~ [for=c] {
      background-color: #346332;
      color: #F8F8F8;
    }
    </style>
    